<p id="notice"><%= notice %></p>

<h1>Experiments</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Language</th>
      <th>Primary</th>
      <th>Repo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiments.each do |experiment| %>
      <tr>
        <td><%= experiment.user %></td>
        <td><%= experiment.language %></td>
        <td><%= experiment.primary %></td>
        <td><%= experiment.repo %></td>
        <td><%= link_to 'Show', experiment %></td>
        <td><%= link_to 'Edit', edit_experiment_path(experiment) %></td>
        <td><%= link_to 'Destroy', experiment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experiment', new_experiment_path, class: "btn btn-primary"%>
